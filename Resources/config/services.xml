<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="env(APP_VERSION)">''</parameter>
        <parameter key="env(LAST_COMMIT_DATE)">''</parameter>
        <parameter key="env(BUILD_START_TIME)">''</parameter>
        <parameter key="app.version">%env(string:APP_VERSION)%</parameter>
        <parameter key="app.last_commit_date">%env(string:LAST_COMMIT_DATE)%</parameter>
        <parameter key="app.build_start_time">%env(string:BUILD_START_TIME)%</parameter>
    </parameters>

    <services>
        <service id="health_check.controller.health_check_controller"
                 class="Immediate\Bundle\HealthCheckBundle\Controller\HealthCheckController"
                 public="true"
        >
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
        </service>
    </services>
</container>
